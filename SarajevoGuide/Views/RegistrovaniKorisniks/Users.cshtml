@model IEnumerable<SarajevoGuide.Models.RegistrovaniKorisnik>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container">
    <h2>Manage Users</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">+ Add New User</a>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@item.username</h5>
                            <p class="card-text">
                                <strong>Name:</strong> @item.ime @item.prezime<br />
                                <strong>Email:</strong> @item.email<br />
                                <strong>User ID:</strong> @item.id
                            </p>
                        </div>
                        <div class="card-footer">
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.id" class="btn btn-info btn-sm">View</a>
                                <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger btn-sm">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">No users found!</h4>
            <p>There are currently no registered users in the system.</p>
            <hr>
            <p class="mb-0">
                <a asp-action="Create" class="btn btn-primary">Create the first user</a>
            </p>
        </div>
    }
</div>