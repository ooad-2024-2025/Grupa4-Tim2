@model SarajevoGuide.Models.RegistrovaniKorisnik
@{
    ViewData["Title"] = "Login";
    ViewData["HideNavbar"] = true;
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 85vh;">
    <div class="card p-4 shadow-sm rounded-4" style="width: 100%; max-width: 450px; background-color: #ffffff;">
        <h2 class="text-center mb-4 fw-bold" style="color: #e44c3c;">Login</h2>

   
        <div asp-validation-summary="All" class="text-danger mb-2"></div>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="email" class="form-label fw-semibold">Email</label>
                <input asp-for="email" type="email" class="form-control rounded-3" />
                <span asp-validation-for="email" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="lozinka" class="form-label fw-semibold">Password</label>
                <input asp-for="lozinka" type="password" class="form-control rounded-3" />
                <span asp-validation-for="lozinka" class="text-danger small"></span>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn rounded-3 fw-bold" style="background-color: #e44c3c; color: black;">Log In</button>
            </div>
        </form>

        <div class="text-center">
            <a asp-action="Index" class="text-muted text-decoration-none">Back</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
