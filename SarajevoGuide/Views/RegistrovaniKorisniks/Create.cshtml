@model SarajevoGuide.Models.RegistrovaniKorisnik

@{
    ViewData["Title"] = "Create";
    ViewData["HideNavbar"] = true;
}

<div style="min-height: 100vh; overflow-y: auto; background-color: #fff5f0;">
    <div class="container py-5 mt-5">
        <div class="card mx-auto shadow border-0 p-4" style="max-width: 500px; border-radius: 1rem; background-color: #ffffff;">
            <h2 class="text-center fw-bold mb-4" style="color: #e44c3c;">Sign Up</h2>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="ime" class="form-label fw-semibold">Name</label>
                    <input asp-for="ime" class="form-control rounded-3" />
                    <span asp-validation-for="ime" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="prezime" class="form-label fw-semibold">Surname</label>
                    <input asp-for="prezime" class="form-control rounded-3" />
                    <span asp-validation-for="prezime" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="email" class="form-label fw-semibold">Email</label>
                    <input asp-for="email" type="email" class="form-control rounded-3" />
                    <span asp-validation-for="email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="lozinka" class="form-label fw-semibold">Password</label>
                    <input asp-for="lozinka" type="password" class="form-control rounded-3" />
                    <span asp-validation-for="lozinka" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="username" class="form-label fw-semibold">Username</label>
                    <input asp-for="username" class="form-control rounded-3" />
                    <span asp-validation-for="username" class="text-danger small"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary-custom text-white fw-semibold rounded-3">submit</button>
                </div>
            </form>

            <div class="text-center mt-3">
                <a asp-action="Index" class="text-muted text-decoration-none">Back</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}