@model IEnumerable<SarajevoGuide.Models.RegistrovaniKorisnik>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Explore Sarajevo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
</head>
<body>
    <div class="auth-container">
        <div class="auth-image"></div>
        <div class="auth-content">
            <button class="auth-close" onclick="window.location.href='/'" aria-label="Close">&times;</button>
            <div class="auth-dot"></div>
            <h1 class="auth-title">Explore Sarajevo</h1>
            <p class="auth-subtitle">Join us today</p>      
            <a asp-controller="RegistrovaniKorisniks" asp-action="Create" class="auth-btn primary">Sign up with email</a>
            <p class="auth-terms">
                By signing up, you agree to the
                <a href="#">Terms of Service</a> and
                <a href="#">Privacy Policy</a>, including <a href="#">cookie use</a>.
            </p>
            <p class="auth-small-text">Already have an account?</p>
            <a asp-controller="RegistrovaniKorisniks" asp-action="Login" class="auth-btn secondary">Log in</a>
            <p class="auth-skip" onclick="window.location.href='/'">Or skip for now and explore our website…</p>
        </div>
    </div>
</body>
</html>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        document.body.classList.add("fade-in");
    });
</script>

