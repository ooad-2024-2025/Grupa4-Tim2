@model IEnumerable<SarajevoGuide.Models.Kupovina>

@{
    ViewData["Title"] = "Sve kupovine";
}

<div class="container py-6" style="max-width: 900px; padding-top:150px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Sve kupovine</h2>
        <a asp-action="Create" class="btn btn-sm btn-primary rounded-3 fw-semibold">Nova kupovina</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">Nema nijedne evidentirane kupovine.</div>
    }
    else
    {
        <table class="table table-bordered table-striped align-middle">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Datum</th>
                    <th>Broj ulaznica</th>
                    <th>Korisnik ID</th>
                    <th>Event ID</th>
                    <th class="text-center">Akcije</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.datumKupovine.ToString("dd.MM.yyyy")</td>
                        <td>@item.brojUlaznica</td>
                        <td>@item.korisnikId</td>
                        <td>@item.eventId</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1">Detalji</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">Uredi</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Obriši</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
